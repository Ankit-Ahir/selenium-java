<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests">
	<groups>
		<run>
			<include name="Purchase" />
		</run>
	</groups>

	<test thread-count="5" name="Stand Alone Test">
		<classes>
			<class
				name="rahulshettyacademy.selenium_java.tests.StandAloneTest" />

		</classes>
	</test>
	<test thread-count="5" name="Error Validation Test">
		<classes>
			<class
				name="rahulshettyacademy.selenium_java.tests.ErrorValidationTest" />
		</classes>
	</test>
</suite> 
